<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>
  <style>
    .btn-edit {
      outline: none;
      border: none;
      background-color: orange;
      height: 25px;
      width: 60px;
      border: 10px;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
    .btn-delete {
      outline: none;
      border: none;
      background-color: red;
      height: 25px;
      width: 60px;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <body>
    <table>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td><%= data[i].id %></td>
        <td><%= data[i].email %></td>
        <td><%= data[i].firstName %></td>
        <td><%= data[i].lastName %></td>
        <td><%= data[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%= data[i].id %>"
            type="button"
            class="btn-edit"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%= data[i].id %>"
            type="button"
            class="btn-delete"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
